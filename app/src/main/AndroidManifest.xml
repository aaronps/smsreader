<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.aaronps.smsreader">

    <uses-permission android:name="android.permission.READ_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".SMSApplication"
        >
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ViewColumnsActivity"></activity>
        <activity android:name=".ListMessages"></activity>
        <activity android:name=".ViewMessage"></activity>
        <activity android:name=".MainConfigureActivity"></activity>
        <activity android:name=".ConfigListSMSContexts"></activity>
        <activity android:name=".ConfigListSMSFields"></activity>
        <activity android:name=".ListSMSBoxes"></activity>

    </application>

</manifest>